<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggingProblem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_problem"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewSun"
            android:layout_width="139dp"
            android:layout_height="118dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sun_graphic" />

        <TextView
            android:id="@+id/hiTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:text="Spokojnie,"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hiTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:text="pomożemy Ci"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:id="@+id/forgottenPasswordButton"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="forgottenPassword"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_helper"
            android:fontFamily="@font/bold"
            android:text="Zapomniałem hasła"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="210dp"
            android:id="@+id/createNewAccountButton"
            android:layout_height="50dp"
            android:onClick="newAccount"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_helper"
            android:fontFamily="@font/bold"
            android:text="Chcę stworzyć konto"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_helper"
            android:fontFamily="@font/bold"
            android:onClick="aboutAuthors"
            android:text="About"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>